<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1pt"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="right|center"
            android:paddingRight="2pt"
            android:text=""
            android:textSize="10pt"
            tools:ignore="SpeakableTextPresentCheck" />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/buclear"
                    android:text="c"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    ></Button>

                <Button
                    android:id="@+id/blank"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:text=""
                    tools:ignore="SpeakableTextPresentCheck"></Button>

                <Button
                    android:id="@+id/budot"
                    android:text="."
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    ></Button>

                <Button
                    android:id="@+id/divideBTN"
                    android:text="/"
                    android:layout_marginRight="1pt"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:layout_weight="1"
            ></Button>

        </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/bu7"
                    android:text="7"
                    android:layout_marginRight="1pt"
                    android:layout_height="30pt"
                    android:layout_width="30pt"
                    android:layout_weight="1"



                    ></Button>

                <Button
                    android:id="@+id/bu8"
                    android:text="8"

                    android:layout_marginRight="1pt"
                    android:layout_height="30pt"
                    android:layout_width="30pt"
                    android:layout_weight="1"

                    ></Button>

                <Button
                    android:id="@+id/bu9"
                    android:text="9"
                    android:layout_marginRight="1pt"
                    android:layout_height="30pt"
                    android:layout_width="30pt"
                    android:layout_weight="1"


                    ></Button>

                <Button
                    android:id="@+id/multiplyBTN"
                    android:text="*"
                    android:layout_marginRight="1pt"
                    android:layout_height="30pt"
                    android:layout_width="30pt"
                    android:layout_weight="1"

                    ></Button>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/bu4"
                    android:text="4"
                    android:layout_marginRight="1pt"
                    android:layout_height="30pt"
                    android:layout_width="30pt"
                    android:layout_weight="1"
                    ></Button>

                <Button
                    android:id="@+id/bu5"
                    android:text="5"
                    android:layout_marginRight="1pt"
                    android:layout_height="30pt"
                    android:layout_width="30pt"
                    android:layout_weight="1"


                    ></Button>

                <Button
                    android:id="@+id/bu6"
                    android:text="6"
                    android:layout_marginRight="1pt"
                    android:layout_height="30pt"
                    android:layout_width="30pt"
                    android:layout_weight="1"


                    ></Button>

                <Button
                    android:id="@+id/minusBTN"
                    android:text="-"
                    android:layout_marginRight="1pt"
                    android:layout_height="30pt"
                    android:layout_width="30pt"
                    android:layout_weight="1"

                    ></Button>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/bu1"
                    android:text="1"
                    android:layout_marginRight="1pt"
                    android:layout_height="30pt"
                    android:layout_width="30pt"
                    android:layout_weight="1"

                    ></Button>

                <Button
                    android:id="@+id/bu2"
                    android:text="2"
                    android:layout_marginRight="1pt"
                    android:layout_height="30pt"
                    android:layout_width="30pt"
                    android:layout_weight="1"


                    ></Button>

                <Button
                    android:id="@+id/bu3"
                    android:text="3"
                    android:layout_marginRight="1pt"
                    android:layout_height="30pt"
                    android:layout_width="30pt"
                    android:layout_weight="1"

                    ></Button>

                <Button
                    android:id="@+id/plusBTN"
                    android:text="+"
                    android:layout_marginRight="1pt"
                    android:layout_height="30pt"
                    android:layout_width="30pt"
                    android:layout_weight="1"

                    ></Button>

            </TableRow>

        </TableLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bu0"
                android:text="0"
                android:layout_marginBottom="1pt"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"

                ></Button>

            <Button
                android:id="@+id/buequal"
                android:text="="
                android:layout_marginBottom="1pt"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"

                ></Button>


        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>